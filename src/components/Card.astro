---
import mainImage from '/public/assets/illustration-article.svg';
import Badge from './Badge.astro';
import Profile from './Profile.astro';

const { blogType, title, body, date, author } = Astro.props;
---

<section class="card">
  <img
    class="card__image"
    src={mainImage.src}
    alt="Illustration of blog post"
  />
  <Badge text={blogType} />
  <p class="date">{date}</p>
  <h2 class="title">{title}</h2>
  <dd class="description">{body}</dd>
  <Profile author={author} />
</section>

<style scoped>
  .card {
    width: 80vw;
    height: fit-content;
    background: white;
    display: flex;
    justify-content: center;
    padding: 1.5rem;
    border-radius: 1.25rem;
    flex-direction: column;
    border: 1px solid var(--Black, #111);
    box-shadow: 8px 8px 0px 0px #000;
  }

  .card__image {
    border-radius: 0.625rem;
  }

  .date {
    font-family: 'Figtree', sans-serif;
    font-weight: 500;
    margin: 0;
  }

  .title {
    font-family: 'Figtree', sans-serif;
    font-weight: 800;
    font-size: 1.5rem;
    margin: 0.75rem 0;
  }

  .description {
    width: 100%;
    margin-left: 0;
    font-family: 'Figtree', sans-serif;
    line-height: 150%;
    color: var(--Grey, #7f7f7f);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .card {
      width: 60vw;
    }
  }

  @media (min-width: 1024px) {
    .card {
      width: 20vw;
    }
  }
</style>
